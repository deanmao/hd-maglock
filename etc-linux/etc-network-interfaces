# /etc/network/interfaces

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
allow-hotplug eth0
iface eth0 inet static
        address 10.15.0.28
        netmask 255.255.252.0
        network 10.15.0.0
        broadcast 10.15.3.255
        gateway 10.15.0.1

auto wlan0
iface wlan0 inet static
        address 10.15.0.29
        netmask 255.255.252.0
        network 10.15.0.0
        broadcast 10.15.3.255
        gateway 10.15.0.1
